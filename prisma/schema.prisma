// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EventType {
  id          Int     @id @default(autoincrement())
  /// @zod.min(1) 
  title       String
  /// @zod.custom(peSlug)
  slug        String
  description String?
}

model User {
  id       Int     @id @default(autoincrement())
  username String
  name     String?
  email    String
  password String
}
